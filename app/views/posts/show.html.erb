 <h1>Posts endpoint</h1>
<p>Here should be displayed the users selected post</p>
<main>
  <section>
 <%= link_to "Back", :back , :class => "link-pages" %>
    <div>
      <div class="user-posts-post">
        <h3>Post <%= @post.id %></h3>
        <p><%= @post.text %></p>
        <span>Comments: <%= @post.CommentsCounter %></span>
        <span>Likes: <%= @post.LikesCounter %></span>
      </div>
      <div class="user-posts-post-comments">
          <% @post.comments.each do |comment| %>
            <div class="single-user-single-post-single-comment">
              <p><strong><%= comment.user.name %>: <%= comment.text %></strong></p>
            </div>
          <% end %>
        </div>
    </div>
  </section>
</main>