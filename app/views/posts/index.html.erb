<h1>Posts endpoint</h1>
<p>Here should be displayed the users's posts</p>
<main>
  <section>
    <%= link_to "Back", user_path(@user)%>
    <div class="user-posts-card">
      <div class="user-posts-img-div">
        <img src="<%= @user.photo %>" class="user-img">
      </div>
      <div class="user-posts-info">
        <h2>
          <%= @user.name %>
        </h2>
        <span>
          Number of posts: <%= @user.posts_counter %>
        </span>
      </div>
    </div>
    <% @user.posts.each do |post| %>
      <div class="user-posts-post">
        <h2><%= link_to post.title, user_post_path(@user, post)%></h2>
        <p><%= post.text %></p>
        <span>Comments: <%= post.CommentsCounter %></span>
        <span>Likes: <%= post.LikesCounter %></span>
      </div>
      <div class="user-posts-post-comments">
        <% post.recent_comments.includes([:user]).each do |comment| %>
          <div class="single-user-single-post-single-comment">
            <p><%= comment.user.name %>: <%= comment.text %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </section>
</main>
