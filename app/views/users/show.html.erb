    
<h1>Users endpoint</h1>
<p>Here should be displayed the selected user information</p>
<section clas='bio'>
  <div class="user-header">
    <div class="user-image">
      <img src="<%= @user.photo %>">
    </div>
    <div class="user-info">
      <h2>
        <%= @user.name %>
      </h2>
      <h3>
        Number of posts: <%= @user.posts_counter %>
      </h3>
    </div>
  </div>
  <div class="user-bio">
    <h3>
      Bio
    </h3>
    <p>
      <%= @user.bio %>
    </p>
  </div>
  <% @user.recent_posts.each do |post| %>
    <div class="single-user-single-post">
      <h3>Post <%= post.id %></h3>
      <p><%= post.text %></p>
      <span>Comments: <%= post.CommentsCounter %></span>
      <span>Likes: <%= post.LikesCounter %></span>
    </div>
  <% end %>
  <%= link_to user_posts_path(@user) do %>
    <button type="button" class="see-all-posts-button">See all posts</button>
  <% end %>
  <section>
